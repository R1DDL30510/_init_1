# Secure Home Systems (SHS) environment template
SHS_BASE=/workspace/_init_1
SHS_DOMAIN=localhost
TLS_MODE=local-ca
WATCH_PATH=./ingest
LAN_ALLOWLIST=127.0.0.1/32
OFFLINE=1
TRACE_SAMPLE_RATE=1.0
SHS_UID=1000
SHS_GID=1000
SHS_PROXY_PORT=8443

# Database
POSTGRES_IMAGE=postgres:15.6
POSTGRES_DB=shs
POSTGRES_USER=shs_app
POSTGRES_PASSWORD=***FILL***

# Object storage
MINIO_IMAGE=minio/minio:RELEASE.2024-01-11T07-46-16Z
MINIO_ROOT_USER=***FILL***
MINIO_ROOT_PASSWORD=***FILL***

# Reverse proxy
PROXY_IMAGE=caddy:2.7.6

# Orchestration
N8N_IMAGE=n8nio/n8n:1.45.1

# Frontend
OPENWEBUI_IMAGE=ghcr.io/open-webui/open-webui:0.1.128
OPENWEBUI_AUTH_MODE=local

# OCR
OCR_IMAGE=ghcr.io/shs/offline-doctr:0.7.1

# Embeddings
TEI_IMAGE=ghcr.io/shs/local-tei:0.10.1

# Reranker
RERANKER_IMAGE=ghcr.io/shs/local-reranker:0.3.0

# Optional LLM
OLLAMA_IMAGE=ollama/ollama:0.1.32
OLLAMA_PORT=11434

{
  "name": "shs-stack",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      "version": "latest",
      "moby": false
    }
  },
  "workspaceMount": "type=bind,source=${localWorkspaceFolder},target=/workspace,consistency=cached",
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  "containerEnv": {
    "DOCKER_BUILDKIT": "1"
  },
  "runArgs": [
    "--cap-drop=ALL",
    "--security-opt", "no-new-privileges:true"
  ],
  "postCreateCommand": "ln -sfn /workspace /workspace/_init_1 && bash scripts/validate_workspace.sh --require-compliant && make bootstrap",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "redhat.vscode-yaml",
        "ms-python.python",
        "ms-python.black-formatter",
        "ms-toolsai.jupyter",
        "ms-ossdata.vscode-postgresql",
        "yzhang.markdown-all-in-one",
        "editorconfig.editorconfig"
      ]
    }
  },
  "remoteUser": "vscode",
  "workspaceFolder": "/workspace",
  "updateContentCommand": "ln -sfn /workspace /workspace/_init_1 && make status"
}

{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "EvidenceSnapshot",
  "description": "Draft schema for evidence metadata records.",
  "type": "object",
  "required": ["timestamp", "artifacts"],
  "properties": {
    "timestamp": {"type": "string", "format": "date-time"},
    "artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path", "sha256"],
        "properties": {
          "path": {"type": "string"},
          "sha256": {"type": "string"},
          "notes": {"type": "string"}
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
